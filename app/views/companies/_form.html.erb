<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :images %> <sup>Can upload multiple images</sup>
    <%= form.file_field :images , :multiple => true, :accept => "image/png,image/gif,image/jpeg"  %>
  </div>

  <% if form.object.images.count > 0 %>
    <div class="field">
    <% form.object.images.each do |image|  %>
      <%= image_tag image, size: "160x100" %>
    <% end %>

    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
